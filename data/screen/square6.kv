
SdScreen:
    id: sc
    name: 'Square6'
    fullscreen: True
    font_size: sc.height * 0.08 if sc.height < sc.width else sc.width * 0.08
    row: 1
    col: 2
    square: 1
    spacing: 0
    padding: 0


    BoxLayout:
        size_hint_y: None
        orientation: "vertical"
        height: sc.height * 0.1 if sc.height < sc.width else sc.width * 0.3
        Label:
            text: ''
            size_hint_y: 0.2
        Label:                              # Top
            text: '[color=FF3333][b][i]6 [/i][/b][/color][color=3333ff][sub]Square Grid[/sub][/color]'
            font_size: sc.height / 10
            markup: True
            size_hint_y: 0.5
        Label:
            text: ''
            size_hint_y: 0.1
        Label:
            size_hint_y: 0.2
            text: app.msg6
            valign: "middle"
            markup: True

    BoxLayout:
        id: wnd
        size_hint_y: None
        height: sc.height * 0.6-(sc.height * 0.6)%6 if sc.height < sc.width else sc.width * 0.9 - (sc.width * 0.9)%6

        Label:
            text: ""                    # Left
            size_hint_y: None
            height: wnd.height

        GridLayout:
            id: sg
            size_hint: None, None
            height: wnd.height
            width: wnd.height
            cols: 6
            spacing: 1
            padding: 1

            canvas.after:
                Color:
                    rgba: 0, 1, 1, 1
                Line:
                    points: sg.pos[0],sg.pos[1], sg.pos[0],sg.pos[1]+sg.height, sg.pos[0] + sg.width,sg.pos[1]+sg.height, sg.pos[0] + sg.width,sg.pos[1], sg.pos[0],sg.pos[1]
                    width: 1
                    close: True
                    
                Line:
                    points: sg.pos[0],sg.pos[1]+sg.height/3 , sg.pos[0]+sg.width,sg.pos[1]+sg.height/3
                    width: 1

                Line:
                    points: sg.pos[0],sg.pos[1]+sg.height/3*2 , sg.pos[0]+sg.width,sg.pos[1]+sg.height/3*2
                    width: 1

                Line:
                    points: sg.pos[0]+sg.width/2,sg.pos[1], sg.pos[0]+sg.width/2,sg.pos[1]+sg.height

                Color:
                    rgba: 1, 0, 0, 0
                Rectangle:                # ROW
                    pos: sg.pos[0], sg.pos[1] + sg.height/6 * sc.row
                    size: sg.width, sg.height/6
                Color:
                    rgba: 0, 1, 0, 0
                Rectangle:                  # COL
                    pos: sg.pos[0] + sg.width/6 * sc.col, sg.pos[1]
                    size: sg.width/6, sg.height
                Color:
                    rgba: 0, 0, 1, 0
                Rectangle:                  # Square
                    pos: sg.pos[0] , sg.pos[1]
                    size: sg.width/2, sg.height/3


            ToggleButton:
                idx: 0
                text: "" if app.board6[self.idx] == 0 else str(app.board6[self.idx])
                group: 'g1'
                font_size: sc.font_size
                color: app.font_color6[self.idx]
                canvas.after:
                    Color:
                        rgba: app.fg_color6[self.idx]
                    Rectangle:
                        pos: self.pos
                        size: self.size
                color: app.font_color6[self.idx]
