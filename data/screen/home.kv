

SdScreen:
    id: sc
    name: 'Home'

    Label:
        size_hint_y: None
        height: sc.height / 10
        font_size: '12'
        bold: 3
        disabled: True

    Label:
        font_size: sc.height / 16
        text: '[color=3333ff][sub][i]Baby learning [/i][/sub][/color][color=ff3333][b]Sudoku[/b][/color]'
        markup: True
        padding: 0,150

    Label:
        size_hint_y: None
        height: sc.height / 10
        disabled: True

    Button:
        id: btn1
        size_hint_y: None
        height: '48dp'
