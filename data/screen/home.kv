    Button:
        id: btn2
        size_hint_y: None
        height: '48dp'
        text: "9 Square Grid"
        on_release: app.go_screen(2)
    Label:
        size_hint_y: None
        height: sc.height / 20
        font_size: '12'
        disabled: True
    Label:
        font_size: sc.height / 60
        size_hint_y: None
        halign: "center"
        text: 'Created for my lovely kids - Charlie & Yina.\nTerence Jiang       June 4 2019'
